<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @task.name %>
</p>

<p>
  <strong>Token:</strong>
  <%= @task.token %>
</p>

<p>
  <strong>Period:</strong>
  <%= @task.period %>
</p>

<% if @task.logs.size > 0 %>
<table>
  <thead>
    <tr>
      <th>Created</th>
      <th>Status</th>
      <th>Message</th>
    </tr>
  </thead>

  <tbody>
    <% @task.logs.each do |log| %>
      <tr>
        <td><%= log.created_at %></td>
        <td><%= log.status %> </td>
        <td><%= log.message %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<%= link_to 'Edit', edit_task_path(@task) %> |
<%= link_to 'Back', tasks_path %>
